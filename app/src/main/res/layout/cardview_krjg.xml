<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/parent_krjg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image_produk_transaksi_DS"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="8dp"
            />

        <TextView
            android:id="@+id/nama_produk_transaksi_DS"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Padi Raja Lele"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_marginRight="8dp"
            />

        <TextView
            android:id="@+id/banyak_produk_transaksi_DS"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bnyk : 8"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/harga_produk_transaksi_DS"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="8dp"
            android:text="Harga :
            Rp. 50000"
            android:gravity="center"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>